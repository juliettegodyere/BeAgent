<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <title><%=title%></title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/responsive.css" rel="stylesheet">
    <link href="css/font-awesome.min.css" rel="stylesheet">
</head>
<body>

  <header id="header">
    <div class="top-bar">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-xs-4">
              <div class="top-number"><p><i class="fa fa-phone-square"></i>  +0123 456 70 90</p></div>
          </div>
          <div class="col-sm-6 col-xs-8">
           <div class="social">
                <ul class="social-share">
                    <li><a href="/login">Sign In/Register</a></li>
                    
                </ul>
               
            </div>
          </div>
        </div>
        </div><!--/.container-->
    </div><!--/.top-bar-->
    <% include ../header %>
  </header>

  <div>         
    <form class="form-inline"action="/" method="post">
      <div class="form-group">
        <input type="text" class="form-control" name="name" placeholder="What are you looking for..."  style="width: 600px; margin-left:100px; border-color: #000">
      </div>
      <button type="submit" class="btn btn-info">Search</button>
    </form>          
  </div>
    
  <div class="container">
    <div class="row">
      <div class="col-md-3" style="background-color: #eee; border-radius: 5px;margin-top: 30px">
        <div class="purpleContentInner">
          <p style="text-align: left; font-size: 15px; color: #000"><b>Welcome to BeAgent</b></p>
        </div>
        <div class="purpleContentInner2 ">
          <p style="text-align: left">Whether you're new to eBay or an experienced member, we have everything you need to get started.</p>
        </div>
        <ul class="purpleContentInner2" style="text-align: left">
          <li><a href="#">New to AgentApp</a></li>
          <li><a href="#">How to order</a></li>
          <li><a href="#">Meet an agent</a></li>
          <li><a href="#">What you should about AgentApp</a></li>
        </ul>              
      </div>
      <div class="col-md-9" style="margin-top: 30px">
                       
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
          </ol>

        <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <img src="images/services/house8.jpeg" alt="Chania" width="460" height="345">
              <div class="carousel-caption">
              <p style="font-size: 30px; color: #c52d2f"><b>BeAgent</b></p>
              <p style="font-size: 20px; color: #1874cd">We can get you, your Dream house.</p>
            </div>
            </div>

          <div class="item">
            <img src="images/services/house5.jpeg" alt="Chania" width="460" height="345">
            <div class="carousel-caption">
              <p style="font-size: 30px; color: #c52d2f"><b>BeAgent</b></p>
              <p style="font-size: 20px; color: #1874cd">Make cool 5% agent few by posting photos of an available property on our site.</p>
            </div>
          </div>
        
          <div class="item">
            <img src="images/services/house3.jpeg" alt="Flower" width="460" height="345">
            <div class="carousel-caption">
             <p style="font-size: 30px; color: #c52d2f"><b>BeAgent</b></p>
             <p style="font-size: 20px; color: #1874cd">Incase you want to upload photo. From homepage click upload photo. Register with your credentials.</p>
            </div>
          </div>

          <div class="item">
            <img src="images/services/house9.jpeg" alt="Flower" width="460" height="345">
            <div class="carousel-caption">
              <p style="font-size: 30px; color: #c52d2f"><b>BeAgent</b></p>
              <p style="font-size: 20px; color: #1874cd">Incase you want a property that is not listed, please drop your details and we will get back to you</p>
            </div>
          </div>
        </div>

      <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        </div>
      </div>              
    </div>
  </div>         
    
    <section id="portfolio" class="bg-light-gray">
        <div class="container" style="margin-top: 50px;">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p class="section-header text-services" style="font-size: 30px;color: #000"><b>Explore Houses Around Lagos</b></p>
                    <h3 class="section-subheading text-muted subtext-services" style="font-size: 15px;color: #1874cd"><b>Most recent houses for rent.</b></h3>
                </div>
            </div>
            
        </div>

        <div id="photos">
        <% photos.forEach(function(photo){ %>
            <div class="photo">
                <div>
                  <img src='<%=photo.path%>'>  
                </div>
                 <div style="text-align: left">
                    <p class=""><%=photo.name%></p>
                </div>
                 <div style="text-align: left">
                     <p class=""><%=photo.location%></p>
                </div>
                 <div style="text-align: left">
                    <p class="">&#8358 <%=photo.amount%></p>
                </div>
                 <div style="text-align: left">
                    <p class=""> <%=photo.datePosted%></p>
                </div>
                
                
                <div>
                     <button type="submit" class="btn btn-primary pull-right btn-sm">Order</button>
                
                </div>
               
                
               
            </div>
        <% })%>
        </div> 
    </section>
    <footer>
        
        <% include ../footer %>
    </footer>

    <div class="modal in fade" id="myModal" style="background-color: #fff; width: 250px;height: 450px;margin-left: 350px; margin-top: 50px;border-radius: 10px">
      <div class="modal-header">
        <a href="" class="close" data-dismiss="modal"><span style="color: blue;text-align: left;"><b>x</b></span></a>
        <h3 style="text-align: center;color: ">Notice!!!!</h3>
        
      </div>
      <div class="modal-body">
        <p>This Web Application is still under construnction, as such it is not advisable to input a real password because a password hashing implementation as not been made.</p>
        <br/>Kindly scroll down to view uploaded pictures.
        
      </div>
      <div class="modal-footer">
        <a href="#" class="btn btn-info">Thanks</a>
        
      </div>
      
    </div>
    
    
    <script src="js/jquery.js" type="text/javascript"></script>
    <script src="js/bootstrap.min.js" type="text/javascript"></script>
    <script type="text/javascript">
      $(window).load(function(){
          $('#myModal').modal('show');
      });
    </script>
     
</body>
</html>